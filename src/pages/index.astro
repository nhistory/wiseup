---
// src/pages/index.astro - New Homepage
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WiseUp | Empowering Your Vision, Enhancing Your Growth</title>
    <meta name="description" content="WiseUp Solution provides expert business solutions, IT consulting, and strategic growth services for your business." />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://wiseupsolution.ca/" />
    <meta property="og:title" content="WiseUp | Empowering Your Vision, Enhancing Your Growth" />
    <meta property="og:description" content="WiseUp Solution provides expert business solutions, IT consulting, and strategic growth services for your business." />
    <meta property="og:image" content="https://wiseupsolution.ca/images/og-image.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://wiseupsolution.ca/" />
    <meta property="twitter:title" content="WiseUp | Empowering Your Vision, Enhancing Your Growth" />
    <meta property="twitter:description" content="WiseUp Solution provides expert business solutions, IT consulting, and strategic growth services for your business." />
    <meta property="twitter:image" content="https://wiseupsolution.ca/images/og-image.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <style>
      .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/images/hero-bg.jpg');
        background-size: cover;
        background-position: center;
        height: 750px;
        display: flex;
        align-items: flex-start;
        color: white;
        text-align: left;
      }
      .hero-accent {
        color: #ffcc00;
      }
      .section-title {
        text-align: center;
        margin-bottom: 4rem;
      }
      .section-title h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: #1a1a2e;
        margin-bottom: 1rem;
      }
      .section-label {
        color: #1565c0;
        display: block;
        font-size: 0.875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        text-align: center;
      }
      .service-card {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        text-align: center;
        transition: transform 0.3s ease;
      }
      .service-card:hover {
        transform: translateY(-10px);
      }
      .process-card {
        background: white;
        padding: 2.5rem 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        text-align: center;
        transition: transform 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .process-icon-container {
        width: 60px;
        height: 60px;
        background: #eef2f8;
        color: #1565c0;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
      }
      .process-card h4 {
        font-size: 1.1rem;
        font-weight: 800;
        color: #1a1a2e;
        margin-bottom: 1.5rem;
        min-height: 2.5rem;
        display: flex;
        align-items: center;
      }
      .process-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .process-list li {
        font-size: 0.85rem;
        color: #4b5563;
        line-height: 1.5;
        margin-bottom: 0.5rem;
        word-break: keep-all;
      }
      .client-logo {
        max-width: 150px;
        transition: all 0.3s ease;
      }
      .client-logo:hover {
        transform: scale(1.05);
      }
      .contact-form-container {
        background: #f8f9fa;
        padding: 4rem 2rem;
        border-radius: 1rem;
      }

      /* Mobile Menu styles */
      #mobile-menu {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: white;
        z-index: 990;
        transform: translateX(100%);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        padding-top: 6rem;
        padding-left: 2rem;
        padding-right: 2rem;
      }
      #mobile-menu.active {
        transform: translateX(0);
      }
      .mobile-menu-open {
        overflow: hidden;
      }
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-border py-4 px-6 md:px-8 z-[1000]">
      <div class="max-w-[1250px] mx-auto flex justify-between items-center">
        <a href="/" class="flex items-center no-underline">
          <img src="/images/logo.png" alt="WiseUp Logo" class="h-10 md:h-14 w-auto" />
        </a>
        
        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center gap-8">
          <ul class="flex gap-8 list-none m-0 p-0">
            <li><a href="#services" class="no-underline text-text-body font-medium text-sm hover:text-primary transition-colors duration-300">Services</a></li>
            <li><a href="#process" class="no-underline text-text-body font-medium text-sm hover:text-primary transition-colors duration-300">Process</a></li>
            <li><a href="/web-dev" class="no-underline text-text-body font-medium text-sm hover:text-primary transition-colors duration-300">Web Development</a></li>
            <li><a href="#contact" class="no-underline text-text-body font-medium text-sm hover:text-primary transition-colors duration-300">Contact</a></li>
          </ul>
        </div>

        <!-- Hamburger Button -->
        <button id="menu-toggle" class="md:hidden flex flex-col justify-center items-center w-10 h-10 gap-1.5 focus:outline-none z-[1001]">
          <span class="w-6 h-0.5 bg-text-dark transition-all duration-300 origin-center"></span>
          <span class="w-6 h-0.5 bg-text-dark transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-text-dark transition-all duration-300 origin-center"></span>
        </button>
      </div>

      <!-- Mobile Menu Drawer -->
      <div id="mobile-menu" class="md:hidden">
        <ul class="flex flex-col gap-6 list-none m-0 p-0">
          <li><a href="#services" class="mobile-link text-2xl font-bold text-text-dark no-underline">Services</a></li>
          <li><a href="#process" class="mobile-link text-2xl font-bold text-text-dark no-underline">Process</a></li>
          <li><a href="/web-dev" class="mobile-link text-2xl font-bold text-text-dark no-underline">Web Development</a></li>
          <li><a href="#contact" class="mobile-link text-2xl font-bold text-text-dark no-underline">Contact</a></li>
        </ul>
      </div>
    </nav>

    <!-- Hero -->
    <header class="hero-section pt-52">
      <div class="max-w-[1250px] mx-auto w-full px-8">
        <h1 class="text-4xl md:text-6xl font-bold mb-0 leading-tight">
          Empowering <span class="hero-accent">Your Vision</span><br/>
          Enhancing <span class="hero-accent">Your Growth</span>
        </h1>
      </div>
    </header>

    <!-- Who We Are -->
    <section class="py-24 px-6 max-w-[900px] mx-auto text-center">
      <span class="section-label">Who We Are</span>
      <h2 class="text-4xl font-extrabold text-text-dark mb-8">Empowering Your Businesses</h2>
      <p class="text-lg text-text-muted leading-relaxed">
        Our vision is to empower businesses with tailored solutions that drive innovation and sustainable growth. By delivering strategic expertise and unique global experiences, we help our clients achieve their goals, overcome challenges, and unlock new opportunities, fostering long-term success and excellence in a dynamic market.
      </p>
    </section>

    <!-- Services -->
    <section id="services" class="py-24 px-6 bg-gray-50">
      <div class="max-w-[1250px] mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Business Expansion -->
          <div class="service-card">
            <h3 class="text-3xl font-bold mb-4">Business Solution & Expansion</h3>
            <img src="/images/service-business.jpg" alt="Business Solution & Expansion" class="w-full h-48 object-cover rounded-lg mb-6" onerror="this.src='https://via.placeholder.com/400x300?text=Business+Solution'" />
            <p class="text-text-muted text-sm mb-6">We establish and execute the optimal business solutions for various areas of client requirements. Conducting operational and flexible approaches to service for new business and project.</p>
            <ul class="text-left text-sm space-y-2 list-none p-0">
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Business Consultancy</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Local office launching</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Trade & KPI building</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Sales channel development</li>
            </ul>
          </div>

          <!-- Recruiting -->
          <div class="service-card">
            <h3 class="text-3xl font-bold mb-4">Recruiting & BPO service</h3>
             <img src="/images/service-recruiting.jpg" alt="Recruiting & BPO service" class="w-full h-48 object-cover rounded-lg mb-6" onerror="this.src='https://via.placeholder.com/400x300?text=Recruiting'" />
            <p class="text-text-muted text-sm mb-6">We offer comprehensive and optimized recruitment strategies and ensure the best candidates based on their speed and controls. We are fully committed to connect candidates with diverse backgrounds.</p>
             <ul class="text-left text-sm space-y-2 list-none p-0">
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Recruiting service</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Job description Branding</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Screening & Interview facilitation</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> BPO(Business Process Operations)</li>
            </ul>
          </div>

          <!-- Marketing -->
          <div class="service-card">
            <h3 class="text-3xl font-bold mb-4">Marketing & Event execution</h3>
             <img src="/images/service-marketing.jpg" alt="Marketing & Event execution" class="w-full h-48 object-cover rounded-lg mb-6" onerror="this.src='https://via.placeholder.com/400x300?text=Marketing'" />
            <p class="text-text-muted text-sm mb-6">Accelerate your business growth with our tailored marketing solutions. We deliver efficiency and performance-driven strategies designed to maximize your impact and achieve sustainable success.</p>
             <ul class="text-left text-sm space-y-2 list-none p-0">
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Marketing Strategy & Plan</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> Agency selection</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> MKT expense optimization</li>
              <li class="flex items-center gap-2"><span class="text-primary">✔</span> VIP event management</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Process -->
    <section id="process" class="py-24 px-6 bg-[#f5f7fa]">
      <div class="max-w-[1250px] mx-auto">
        <div class="section-title">
          <span class="section-label">How It Works</span>
          <h2 class="text-3xl font-bold text-center mb-16">Solution Process</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
          <!-- Step 1 -->
          <div class="process-card">
            <div class="process-icon-container">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 512 512">
                <path d="M464 256A208 208 0 1 1 48 256a208 208 0 1 1 416 0zM0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM232 120l0 136c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2 280 120c0-13.3-10.7-24-24-24s-24 10.7-24 24z" fill="#134cb3"></path>
              </svg>
            </div>
            <h4>Project Brief</h4>
            <ul class="process-list">
              <li>Client Initial project brief development</li>
              <li>Define & align on scope, timelines, and resources</li>
              <li>Goal and objectives discussion</li>
            </ul>
          </div>
          <!-- Step 2 -->
          <div class="process-card">
            <div class="process-icon-container">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 512 512">
                <path d="M64 64c0-17.7-14.3-32-32-32S0 46.3 0 64L0 400c0 44.2 35.8 80 80 80l400 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L80 416c-8.8 0-16-7.2-16-16L64 64zm406.6 86.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L320 210.7l-57.4-57.4c-12.5-12.5-32.8-12.5-45.3 0l-112 112c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L240 221.3l57.4 57.4c12.5 12.5 32.8 12.5 45.3 0l128-128z" fill="#134cb3"></path>
              </svg>
            </div>
            <h4>Analysis</h4>
            <ul class="process-list">
              <li>Assess client's business status</li>
              <li>Analysis data, resource & challenges</li>
              <li>Identify root causes of the project</li>
              <li>Project KPI & output image</li>
            </ul>
          </div>
          <!-- Step 3 -->
          <div class="process-card">
            <div class="process-icon-container">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 384 512">
                <path d="M297.2 248.9C311.6 228.3 320 203.2 320 176c0-70.7-57.3-128-128-128S64 105.3 64 176c0 27.2 8.4 52.3 22.8 72.9c3.7 5.3 8.1 11.3 12.8 17.7c0 0 0 0 0 0c12.9 17.7 28.3 38.9 39.8 59.8c10.4 19 15.7 38.8 18.3 57.5L109 384c-2.2-12-5.9-23.7-11.8-34.5c-9.9-18-22.2-34.9-34.5-51.8c0 0 0 0 0 0s0 0 0 0c-5.2-7.1-10.4-14.2-15.4-21.4C27.6 247.9 16 213.3 16 176C16 78.8 94.8 0 192 0s176 78.8 176 176c0 37.3-11.6 71.9-31.4 100.3c-5 7.2-10.2 14.3-15.4 21.4c0 0 0 0 0 0s0 0 0 0c-12.3 16.8-24.6 33.7-34.5 51.8c-5.9 10.8-9.6 22.5-11.8 34.5l-48.6 0c2.6-18.7 7.9-38.6 18.3-57.5c11.5-20.9 26.9-42.1 39.8-59.8c0 0 0 0 0 0s0 0 0 0s0 0 0 0c4.7-6.4 9-12.4 12.7-17.7zM192 128c-26.5 0-48 21.5-48 48c0 8.8-7.2 16-16 16s-16-7.2-16-16c0-44.2 35.8-80 80-80c8.8 0 16 7.2 16 16s-7.2 16-16 16zm0 384c-44.2 0-80-35.8-80-80l0-16 160 0 0 16c0 44.2-35.8 80-80 80z" fill="#134cb3"></path>
              </svg>
            </div>
            <h4>Solution Design & Planning</h4>
            <ul class="process-list">
              <li>Customized solution agenda</li>
              <li>Execution plan and R&R</li>
              <li>Consensus final deliverable</li>
              <li>Budget confirm & documentation</li>
            </ul>
          </div>
          <!-- Step 4 -->
          <div class="process-card">
            <div class="process-icon-container">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 512 512">
                <path d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152L0 424c0 48.6 39.4 88 88 88l272 0c48.6 0 88-39.4 88-88l0-112c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 112c0 22.1-17.9 40-40 40L88 464c-22.1 0-40-17.9-40-40l0-272c0-22.1 17.9-40 40-40l112 0c13.3 0 24-10.7 24-24s-10.7-24-24-24L88 64z" fill="#134cb3"></path>
              </svg>
            </div>
            <h4>Execution</h4>
            <ul class="process-list">
              <li>Execute and align in the solution</li>
              <li>Conduct & manage implementation</li>
              <li>Monitoring the progress</li>
              <li>Summary output</li>
            </ul>
          </div>
          <!-- Step 5 -->
          <div class="process-card">
            <div class="process-icon-container">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 512 512">
                <path d="M352 320c88.4 0 160-71.6 160-160c0-15.3-2.2-30.1-6.2-44.2c-3.1-10.8-16.4-13.2-24.3-5.3l-76.8 76.8c-3 3-7.1 4.7-11.3 4.7L336 192c-8.8 0-16-7.2-16-16l0-57.4c0-4.2 1.7-8.3 4.7-11.3l76.8-76.8c7.9-7.9 5.4-21.2-5.3-24.3C382.1 2.2 367.3 0 352 0C263.6 0 192 71.6 192 160c0 19.1 3.4 37.5 9.5 54.5L19.9 396.1C7.2 408.8 0 426.1 0 444.1C0 481.6 30.4 512 67.9 512c18 0 35.3-7.2 48-19.9L297.5 310.5c17 6.2 35.4 9.5 54.5 9.5zM80 408a24 24 0 1 1 0 48 24 24 0 1 1 0-48z" fill="#134cb3"></path>
              </svg>
            </div>
            <h4>Review & Report</h4>
            <ul class="process-list">
              <li>Project review & report</li>
              <li>Client feedback & amendment</li>
              <li>Finalize project & regular service discussion</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Clients -->
    <section class="py-24 px-6 bg-gray-50">
      <div class="max-w-[1250px] mx-auto text-center">
         <span class="section-label">Our Clients and Partners</span>
        <h2 class="text-3xl font-bold mb-12">Clients & Partners</h2>
        <div class="flex flex-wrap justify-center items-center gap-12">
          <img src="/images/client-logo-01.png" alt="Pacemaker" class="client-logo" />
          <img src="/images/client-logo-02.png" alt="PGT Group" class="client-logo" />
          <img src="/images/client-logo-03.png" alt="Golfland" class="client-logo" />
          <img src="/images/client-logo-04.png" alt="GNC Golf" class="client-logo" />
          <img src="/images/client-logo-05.png" alt="Teeup Golf" class="client-logo" />
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-24 px-6">
      <div class="max-w-[800px] mx-auto">
        <div class="contact-form-container">
          <div class="text-center mb-12">
            <span class="section-label">Talk to Us</span>
            <h2 class="text-4xl font-extrabold text-text-dark">Contact</h2>
          </div>
          <form action="https://formspree.io/sehwan.lee.dev@gmail.com" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold mb-2">Name *</label>
                <input type="text" name="name" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary" required />
              </div>
              <div>
                <label class="block text-sm font-semibold mb-2">Email *</label>
                <input type="email" name="email" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary" required />
              </div>
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">Message *</label>
              <textarea name="message" class="w-full p-3 border border-gray-300 rounded-md h-32 focus:outline-none focus:ring-2 focus:ring-primary" required></textarea>
            </div>
            <button type="submit" class="w-full bg-primary text-white py-4 rounded-md font-bold hover:bg-primary-dark transition-colors">Submit</button>
          </form>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 border-t border-border mt-12">
      <div class="max-w-[1200px] mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-6">
        <a href="/" class="flex items-center no-underline">
          <img src="/images/logo.png" alt="WiseUp Logo" class="h-10 w-auto" />
        </a>
        <div class="text-sm text-text-muted">© 2026 WiseUp Solution. All rights reserved.</div>

      </div>
    </footer>

    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      const mobileLinks = document.querySelectorAll('.mobile-link');
      const spans = menuToggle.querySelectorAll('span');

      function toggleMenu() {
        mobileMenu.classList.toggle('active');
        document.body.classList.toggle('mobile-menu-open');
        
        // Hamburger animation
        if (mobileMenu.classList.contains('active')) {
          spans[0].style.transform = 'translateY(8px) rotate(45deg)';
          spans[1].style.opacity = '0';
          spans[2].style.transform = 'translateY(-8px) rotate(-45deg)';
        } else {
          spans[0].style.transform = 'none';
          spans[1].style.opacity = '1';
          spans[2].style.transform = 'none';
        }
      }

      menuToggle.addEventListener('click', toggleMenu);

      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.remove('active');
          document.body.classList.remove('mobile-menu-open');
          spans[0].style.transform = 'none';
          spans[1].style.opacity = '1';
          spans[2].style.transform = 'none';
        });
      });
    </script>
  </body>
</html>
